button.disclosure__button {
  align-content: center;
  align-items: center;
  background: unset;
  border: unset;
  color: #fff;
  display: flex;
  gap: .75em;
  white-space: nowrap;
}

button.disclosure__button>* {
  width: 20px;
}

localization-form form {
  padding: 15px 0;
}

a.searchForm svg {
  fill: currentColor;
  pointer-events: none;
  width: 1.5em;
}

.disclosure__list {
  background-color: #fff;
}

.disclosure__item a {
  color: #000;
}

.searchFormModel {
  background: rgba(0, 0, 0, .5);
  bottom: 0;
  display: none;
  left: 0;
  position: fixed;
  right: 0;
  top: 0;
  z-index: 99;
}

.searchFormModelClose {
  color: #fff;
  font-size: 2em;
  font-weight: bold;
  position: absolute;
  right: 1em;
  top: 1em;
  z-index: 2;
}

.searchFormModelWrapper {
  align-items: center;
  display: flex;
  height: 100%;
  justify-content: center;
  padding: 2rem;
  position: absolute;
  width: 100%;
}
