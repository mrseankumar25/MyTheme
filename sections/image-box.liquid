<section class="values sectionPad center">
    <div class="container">
        {% if section.settings.heading != blank %}<h2>{{ section.settings.heading }}</h2>{% endif %}
        <div class="row conCenter">
            {% for block in section.blocks %}
                {% if block.type == "box" %}
                    <div class="col-sm-4">
                        <div class="valueContainer">
                            <div class="valueImage">
                                <figure style="background-image: url({{ block.settings.boxImage | img_url: 'master' }});"></figure>
                            </div>
                            <div class="valueTitle">
                                <h3>{{ block.settings.boxHeading }}</h3>
                            </div>
                            <div class="valueContent">
                                {{ block.settings.boxContent }}
                            </div>
                        </div>
                    </div>
                {% endif %}
            {% endfor %}
        </div>
    </div>
</section>

{% schema %}
{
    "name": "Images Box",
    "max_blocks": 6,
    "settings": [
        {
            "type": "text",
            "id": "heading",
            "label": "Heading",
            "default": "the value we bring"
        }
    ],
    "blocks": [
        {
            "type": "box",
            "name": "Box",
            "settings": [
                {
                    "type": "text",
                    "id": "boxHeading",
                    "label": "Titel"
                },
                {
                    "type": "image_picker",
                    "id": "boxImage",
                    "label": "Image"
                },
                {
                    "type": "richtext",
                    "id": "boxContent",
                    "label": "Content"
                }
            ]
        }
    ],
    "presets": [
        {
            "category": "Content",
            "name": "Images Box"
        }
    ]
}
{% endschema %}